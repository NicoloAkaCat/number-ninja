<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonStyle">
        <item name="cornerRadius">@dimen/button_rounded</item>
    </style>
    <style name="chipSuccessStyle">
        <item name="android:elevation">5dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/success_light</item>
        <item name="chipStrokeColor">@color/success_dark</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="chipErrorStyle">
        <item name="android:elevation">5dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/error_light</item>
        <item name="chipStrokeColor">@color/error_dark</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="scoreBig" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#DD000000</item>
    </style>
    <style name="scoreSmall" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#DD000000</item>
    </style>
</resources>